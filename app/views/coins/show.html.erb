<p id="notice"><%= notice %></p>

<h1><%= I18n.t("showing.coin") %></h1>

<form>
  <div class="form-group">
    <%= label_tag @coin.class.human_attribute_name(:description) %>
    <%= text_field_tag nil, @coin.description, class:"form-control", disabled: true %>
  </div>
  <div class="form-group">
    <%= label_tag @coin.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @coin.acronym, class:"form-control", disabled: true %>
  </div>
  <div class="form-group">
    <%= label_tag @coin.class.human_attribute_name(:url_image) %>
    <%= text_field_tag nil, @coin.url_image, class:"form-control", disabled: true %>
   
  </div>
</form>

<br>

<%= link_to 'Edit', edit_coin_path(@coin), class:"btn btn-primary" %> 
<%= link_to I18n.t("links.back"), coins_path, class:"btn btn-primary" %>
